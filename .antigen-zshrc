DEFAULT_USER='jpogran'

source ~/.antigen/antigen.zsh

antigen use oh-my-zsh

antigen bundle <<EOBUNDLES
  zsh-users/zsh-syntax-highlighting
  git
  git-extras
  sublime
  ruby
  repo
  sudo
  brew
  bundler
  vagrant
  extract
  osx

EOBUNDLES

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor root line)

antigen theme pure

antigen apply

export EDITOR='vim'

alias cls="clear"

source /opt/boxen/env.sh
export PATH=$PATH:~/packer
export VAGRANT_DEFAULT_PROVIDER=virtualbox
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

export PATH="/opt/boxen/rbenv/shims:/usr/local/sbin:/usr/local/bin:/Users/jpogran/.rbenv/bin:bin:/opt/boxen/rbenv/shims:/opt/boxen/rbenv/bin:/opt/boxen/ruby-build/bin:node_modules/.bin:/opt/boxen/nodenv/shims:/opt/boxen/nodenv/bin:/opt/boxen/homebrew/bin:/opt/boxen/homebrew/sbin:/opt/boxen/bin:/usr/bin:/usr/local/bin:/opt/local/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

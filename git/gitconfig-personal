[user]
  email      = james.pogran@outlook.com
  signingkey = 45CAED724A0A0B34
[alias]
  # Push the current branch upstream to jpogran using the same
  # branch name for the remote branch.
  um = !(git remote -v | grep -q jpogran || hub fork) \
      && git push --set-upstream jpogran $(git current-branch)
  # Push the current branch to jpogran and open a pull request.
  umpr = !git um && hub pull-request -o

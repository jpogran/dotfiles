{
  "debug.openDebug": "neverOpen",

  "editor.fontSize": 16,
  "editor.fontFamily": "'CaskaydiaCove NF', 'Cascadia Code PL', 'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "files.autoSave": "afterDelay",

  "files.defaultLanguage": "markdown",
  "files.encoding": "utf8",
  "files.eol": "\n",

  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "editor.renderControlCharacters": true,
  "editor.renderFinalNewline": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "line",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],

  "git.enableStatusBarSync": false,

  "terminal.integrated.windowsEnableConpty": true,
  "terminal.integrated.fontSize": 18,

  "window.openFilesInNewWindow": "off",
  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "all",
  "window.titleBarStyle": "custom",
  "window.title": "${activeEditorShort}${separator}${rootName}${dirty}",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.enablePreview": false,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.colorTheme": "GitHub Dark",
  "workbench.colorCustomizations": {
    "terminal.ansiBrightBlack": "#696562" // paramters show up in github dark clearer
  },

  "gitlens.codeLens.scopes": ["document", "containers"],
  "gitlens.statusBar.enabled": false,

  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.integratedConsole.showOnStartup": false,

  "typescript.format.enable": false,
  "typescript.tsc.autoDetect": "off",

  "[git-commit]": {
    "editor.rulers": [72],
    "editor.wordWrapColumn": 72,
    "editor.wordWrap": "wordWrapColumn"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": false,
    "files.trimTrailingWhitespace": false
  },
  "[powershell]": {
    "editor.codeLens": false
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open"
}

#!/bin/bash

set -eufo pipefail

{{ $brews := list
     "bat"
     "curl"
     "fzf"
     "gh"
     "git"
     "hugo"
     "jq"
     "neovim"
     "nmap"
     "nvm"
     "oh-my-posh"
     "wget"
     "zsh"  -}}
{{ $casks := list
     "alfred"
     "1password-cli"
     "font-fira-code-nerd-font"
     "iterm2"
     "powershell"
     "visual-studio-code" -}}

brew tap homebrew/cask-fonts
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

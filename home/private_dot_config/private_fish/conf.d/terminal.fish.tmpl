# Terminal-specific configurations based on platform
{{ if eq .chezmoi.os "darwin" -}}
# macOS-specific terminal settings
set -gx TERMINAL_APP "{{ .data.macos.terminal }}"
{{ else if eq .chezmoi.os "linux" -}}
# Linux-specific terminal settings
set -gx TERMINAL_APP "{{ .data.linux.terminal }}"
{{ else if eq .chezmoi.os "windows" -}}
# Windows-specific terminal settings
set -gx TERMINAL_APP "{{ .data.windows.terminal }}"
{{ end -}}

# Set up terminal-specific configurations
switch $TERMINAL_APP
  case "iterm2"
    # iTerm2-specific settings
    set -gx ITERM_ENABLE_SHELL_INTEGRATION_WITH_TMUX 1

  case "ghostty"
    # Ghostty-specific settings
    set -gx GHOSTTY_RESOURCES_DIR "$HOME/.config/ghostty/resources"

  case "windows-terminal"
    # Windows Terminal-specific settings
    # Add any specific settings here
end
